[credential]
    helper = cache --timeout=14400

[core]
    editor = nvim
    safecrlf = true
    autocrlf = false
    ignorecase = false
    whitespace = trailing-space,space-before-tab
    excludesfile = ~/.gitignore_global
    quotepath = false

[status]
    submoduleSummary = true

[push]
    default = simple

[pull]
    ff = only

[rebase]
    autostash = true

[rerere]
    enabled = true

[color]
    ui = true
[color "branch"]
    current	= bold reverse red
	local	= yellow
    remote	= blue
    plain = white
[color "diff"]
    plain = white
	meta = bold blue black
    frag = magenta bold
    func = cyan
    old = red
    new	= blue bold
	whitespace = reverse black
    commit = bold black
[color "status"]
    header = dim white black
    added = yellow
	changed = red
    untracked = cyan
    unmerged = red
[color "decorate"]
    branch = bold green black # by default: bold gree
    tag = bold yellow black # by default: bold yellow
    stash = bold yellow black # by default: bold magent
    HEAD = bold red black # by default: bold cyan

[merge]
    tool = opendiff
    conflictstyle = diff3

[apply]
	whitespace = fix

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

# Diff mechanism / Delta
# Source: https://github.com/dandavison/delta

[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta

[interactive]
    diffFilter = delta --color-only

[diff "localizablestrings"]
    textconv = "iconv -f utf-16 -t utf-8"
    binary = false

[delta]
    whitespace-error-style = 22 reverse
    line-numbers = true
    side-by-side = true
    decorations = true

[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none
