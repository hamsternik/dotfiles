unamestr=`uname`
if [[ "$unamestr" == 'Linux' ]]; then
    alias ls="ls --color=auto"
    alias dir="dir --color=auto"

    alias grep="grep --color=auto"
    alias fgrep="fgrep --color=auto"
    alias egrep="egrep --color=auto"
elif [[ "$unamestr" == 'FreeBSD' || "$unamestr" == 'Darwin' ]]; then
    alias ls='ls -G'
fi

# Reload the shell
alias reload="exec $SHELL -l"

# Navigation
alias l="ls -CF"
alias ll="l -Al"
alias la="l -A"
alias ...="cd ../.."
alias ..="cd .."

alias g="git"
alias df="df -h"
alias cl="clear"
alias gdb="gdb -q"
alias ping1="ping -c 4 google.com"

DEVELOPER="~/Developer"
PUBLIC="${DEVELOPER}/public"

# dir routing: 1st and 2nd levels, cd ~/Developer
alias dev="cd ${DEVELOPER}"
alias public="cd ${PUBLIC}"
alias private="cd ${DEVELOPER}/private"
alias remote="cd ${DEVELOPER}/remote"

# dir routing: public project, cd ~/Developer/public/
alias b="cd ${PUBLIC}/blog"
alias d="cd ${PUBLIC}/dotfiles"
alias w="cd ${PUBLIC}/work"
alias wi="cd ${PUBLIC}/work/ios-develop"