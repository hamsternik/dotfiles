unamestr=`uname`
if [[ "$unamestr" == 'Linux' ]]; then
    alias ls="ls --color=auto"
    alias dir="dir --color=auto"

    alias grep="grep --color=auto"
    alias fgrep="fgrep --color=auto"
    alias egrep="egrep --color=auto"
elif [[ "$unamestr" == 'FreeBSD' || "$unamestr" == 'Darwin' ]]; then
    alias ls='ls -G'
fi

# Reload the shell
alias reload="exec $SHELL -l"

# Quick-Edit
alias bashrc="vim ~/.bashrc"
alias vimrc="vim ~/.vimrc"

# Navigation
alias l="ls -CF"
alias ll="l -Al"
alias la="l -A"
alias ...="cd ../.."
alias ..="cd .."

alias g="git"
alias df="df -h"
alias cl="clear"
alias gdb="gdb -q"
alias ping1="ping -c 4 google.com"


# Routing
alias dev="cd ~/Developer"
alias work="cd ~/Developer/life360"
alias nn="cd ~/Developer/nasnaga"

alias d="cd ~/Developer/hamsternik/dotfiles"
alias n="cd ~/Developer/hamsternik/notes"
alias blog="cd ~/Developer/hamsternik/blog"
